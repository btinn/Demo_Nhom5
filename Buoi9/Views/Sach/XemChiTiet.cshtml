@using Buoi9.Models;
@model Sach
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="~/HinhAnhSP/@Model.AnhBia" class="img-fluid" alt="BOOK1" />
        </div>
        <div class="col-md-8">
            <strong>Tên sách:</strong> @Model.TenSach <br />
            <strong>Chủ đề:</strong> @Model.ChuDe.TenChuDe <br />
            <strong>Nhà xuất bản:</strong> @Model.NhaXuatBan.TenNXB <br />
            <strong>Nội dung tóm tắt:</strong> <br />
            <p>@Model.MoTa</p>
            <strong>Giá bán:</strong> @Model.GiaBan<br />
        </div>
    </div>

    

</div>
<a href="@Url.Action("Index", "Sach")"><input type="submit" value="Mua Tiep" class="btn btn-primary"/></a>

<a href="@Url.Action("ThemGioHang", "GioHang", new { @masach = Model.MaSach, @strURL = Request.Url.ToString() })">
    <input type="submit" value="Mua Ngay" class="btn btn-primary" />
</a>
